class Solution {
    public int calculate(String s) {
        Stack<Integer> stk=new Stack<>();
        int sign=1;
        int num=0;
        int res=0;

        for(int i=0;i<s.length();i++)
        {
            char ch=s.charAt(i);

            if(Character.isDigit(ch))
            {
                num=num*10+(int)(ch-'0');
            }
            else if(ch=='+')
            {
                res+=sign*num;
                num=0;
                sign=1;
            }
            else if(ch=='-')
            {
                res+=sign*num;
                num=0;
                sign=-1;
            }
            else if(ch=='(')
            {
                stk.push(res);
                stk.push(sign);
                sign=1;
                res=0;
            }
            else if(ch==')')
            {
                res+=sign*num;
                num=0;
                res*=stk.pop();
                res+=stk.pop();
            }
        }
        if(num!=0)      res+=sign*num;
        return res;
    }
}
