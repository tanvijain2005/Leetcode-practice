class Solution {
    public int numberOfSubarrays(int[] nums, int k) {
        int l=0,c=0,sum=0;

        HashMap<Integer,Integer> freq=new HashMap<>();
        for(int i=0;i<nums.length;i++)
        {
            if(nums[i]%2 == 0)
            {
                nums[i]=0;
            }
            else
            {
                nums[i]=1;
            }

            sum+=nums[i];
            if(sum==k)
            {
                c++;
            }

            if(freq.containsKey(sum-k))
            {
                c+=freq.get(sum-k);
            }
            freq.put(sum,freq.getOrDefault(sum,0)+1);
        }
        return c;
    }
}
