class Solution {
    public int numberOfSubstrings(String s) {
        int c=0,l=0;
        int[] freq=new int[3];
        int n=s.length();

        for(int i=0;i<s.length();i++)
        {
            char ch=s.charAt(i);
            freq[ch-'a']++;

            while(freq[0]>0 && freq[1]>0 && freq[2]>0)
            {
                c+=(n-i);
                freq[s.charAt(l)-'a']--;
                l++;
            }
            
        }
        return c;
    }
}
