class Solution {
    public int characterReplacement(String s, int k) {
        int maxl=1,maxf=0,l=0;
        int[] count=new int[26];

        for(int i=0;i<s.length();i++)
        {
            count[s.charAt(i)-'A']++;
            maxf=Math.max(maxf,count[s.charAt(i)-'A']);

            while((i-l+1)-maxf > k)
            {
                count[s.charAt(l)-'A']--;
                l++;
            }
            maxl=Math.max(maxl,(i-l+1));
        }
        return maxl;
    }
}
